{
	"name": "stellarbeat",
	"private": true,
	"version": "0.1.0",
	"description": "stellarbeat project monorepo",
	"scripts": {
		"build:ts": "tsc --build --verbose",
		"build": "tsc --build --verbose && pnpm --filter frontend run build && pnpm --parallel post-build",
		"serve": "pnpm build:ts && concurrently -n backend,frontend -c yellow,blue \"pnpm --filter backend run start-api\" \"pnpm --filter frontend run dev\"",
		"test:unit": "jest --testPathIgnorePatterns '\\.integration\\.test'",
		"tu": "pnpm test:unit",
		"test:integration": "jest --testMatch '**/*.integration.test.[jt]s?(x)' --runInBand",
		"ti": "pnpm test:integration",
		"lint": "pnpm eslint .",
		"test:all": "pnpm run test:unit && pnpm run test:integration",
		"start:frontend": "pnpm --filter frontend run start",
		"start:api": "pnpm --filter backend run start-api",
		"start:network-scan": "pnpm --filter backend run scan-network"
	},
	"keywords": [],
	"author": "pieterjan84",
	"license": "MIT",
	"engines": {
		"node": ">=20.0.0"
	},
	"type": "module",
	"dependencies": {
		"@stellar/stellar-base": "12.1.1",
		"dotenv": "^16.4.5",
		"lru-cache": "^11.0.1",
		"neverthrow": "^8.0.0",
		"pino": "^9.4.0",
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@types/jest": "29.5.6",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "8.8.1",
		"@typescript-eslint/parser": "8.8.1",
		"@vue/eslint-config-prettier": "^10.0.0",
		"@vue/eslint-config-typescript": "^14.0.0",
		"eslint-plugin-vue": "^9.28.0",
		"concurrently": "^9.0.1",
		"eslint": "9.12.0",
		"eslint-plugin-import": "^2.31.0",
		"globals": "^15.10.0",
		"husky": "9.1.6",
		"jest": "29.7.0",
		"jest-mock-extended": "4.0.0-beta1",
		"prettier": "3.3.3",
		"ts-jest": "29.1.1",
		"ts-node": "10.9.2",
		"typescript": "^5.6.2"
	},
	"packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b"
}
