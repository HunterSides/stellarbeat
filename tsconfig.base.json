{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2016",
		"module": "commonjs",
		"types": ["node", "jest", "reflect-metadata"],
		"noUnusedParameters": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"declaration": true,
		"declarationMap": true
	}
}
