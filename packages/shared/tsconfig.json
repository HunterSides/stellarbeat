{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "types": ["node", "jest"],
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
  ],
	"exclude": [
		"node_modules/**/*",
		"src/**/__tests__/*",
		"src/**/__mocks__/*",
		"src/**/__fixtures__/*"
	]
}